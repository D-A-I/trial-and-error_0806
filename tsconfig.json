{
  "compilerOptions": {
    /* ## 以下、vueの推奨構成 ##
     * https://jp.vuejs.org/v2/guide/typescript.html#%E6%8E%A8%E5%A5%A8%E6%A7%8B%E6%88%90 */
    "target": "es5",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    // 最新のECMA Scriptにする
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "sourceMap": true,
    // default export無し(export = module)での、default importを許可
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    // 未使用のパラメータに警告
    "noUnusedParameters": true,
    "allowJs": true, // javascriptもコンパイル対象にし、distに移動する
    "checkJs": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  }
}